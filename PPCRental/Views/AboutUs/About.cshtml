        <div class="row">
            @{
                var count = 0;

            }
            @foreach (var item in db.MEMBERs)
            {
                string arrIcon = (@item.Icon).ToString();
                string[] splitarr = arrIcon.Split(',');
                int dem = splitarr.Count();
                string Icon = "";
                <div class="col-md-3">
                    <div class="team-member">
                        <img class="mx-auto rounded-circle" src="~/Images/@item.Avatar" alt="@item.Member_Info">
                        <h4>@item.Member1</h4>
                        <p class="text-muted">@item.Member_Info</p>
                        <ul class="list-inline social-buttons">
                            @for (int i = 0; i < dem; i++)
                            {
                                Icon = splitarr[i];
                                <li class="list-inline-item">
                                    <a href="@item.Facebook" title="@Icon">
                                        <i class="@Icon"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }

        </div>
    </div>
