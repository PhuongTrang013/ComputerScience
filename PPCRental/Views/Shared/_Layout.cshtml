@using PPCRental.Models;
@{
    PPCEntities db = new PPCEntities();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>PPCRental</title>
    <link href="~/Images/home.png" rel=icon>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content=" PPC RENTAL, PPC RENTAL, bất động sản, nhà cho thuê,">
