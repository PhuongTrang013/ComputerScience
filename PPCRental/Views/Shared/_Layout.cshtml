    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Julius+Sans+One" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/index.css">
    <link href="~/Content/select2.css" rel="stylesheet" />
    <link href="~/Content/select2.min.css" rel="stylesheet" />
    <!-- <link rel="stylesheet" href="css/responsive.css"> -->
</head>
<body>
    <header>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid fluid-menu">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <p class="navbar-Logo">PPCRENTAL</p>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/Home/Index">TRANG CHỦ</a></li>
                        <li><a href="/ViewListOfProject/ViewListOfProjectUser">Dự Án</a></li>
                        <li><a href="~/AboutUs/About">Giới Thiệu</a></li>
                        <li><a href="~/ContactUs/Contact">Liên Hệ</a></li>
                        <li><a href="~/Account/Login"><span class="glyphicon glyphicon-user"></span> Đăng nhập</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @RenderBody()
    <footer class="footer">
        <div class="container">
            <div class="col-md-6">
                <ul class="footer-info">

                    @foreach (var items in db.CONTACTs)
                    {
                        <li class="footer-info-item">
                            @items.Phone_Contact
                        </li>
                        <li class="footer-info-item">
                            <a href="mailto:@items.Email_Contact">@items.Email_Contact</a>
                        </li>
                    }
                    @foreach (var item in db.SOCIALNETWORKs)
                    {
                        <li class="footer-nav-social">
                            <a href="@item.Link" title="@item.SocialNetworkName" target="_blank"><i class="@item.Icon" aria-hidden="true"></i></a>
                        </li>
                    }
                    @*<li class="footer-nav-social">
                            <a href="#" title="twitter" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                        </li>
                        <li class="footer-nav-social">
                            <a href="#" title="instagram" target="_blank"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                        </li>
                        <li class="footer-nav-social">
                            <a href="#" title="pinterest" target="_blank"><i class="fa fa-pinterest" aria-hidden="true"></i></a>
                        </li>*@
                </ul>
            </div>
            <div class="col-md-6">
                <nav>
                    <ul class="footer-nav">
                        <li class="footer-nav-item">
                            <a href="~/ContactUs/Contact">Liên Hệ Công Ty</a>
                        </li>
                        <li class="footer-nav-item is-mt-hidden">
                            <a href="~/AboutUs/About">Giới Thiệu Công Ty</a>
                        </li>
                        <li class="footer-nav-item is-mt-hidden">
                            <a class="support-cus" href="~/ContactUs/Contact">Hỗ Trợ Khách Hàng</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="container-fluid text-right lentop" title="Lên Đầu Trang">
            <i class="fa fa-angle-up" aria-hidden="true"></i>
            <i class="fa fa-angle-up" aria-hidden="true"></i>
            <i class="fa fa-angle-up" aria-hidden="true"></i>
        </div>
    </footer>
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/ppc.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
